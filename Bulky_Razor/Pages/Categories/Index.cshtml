@page
@model Bulky_Razor.Pages.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4 pb-5">
        <div class="col-6">
            <h3 class="text-primary"> category list</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-Page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp;  create new category
            </a>
        </div>
    </div>



    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>  name </th>
                <th> Displayorder</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var ob in Model.Categories)
            {
                <tr>
                    <td style="w-50%">@ob.name </td>
                    <td style="w-30%"> @ob.Displayorder</td>
                    <td style="width:220px">
                        <div>
                            <a asp-Page="/Categories/Edit"  class="btn btn-primary mx-2" asp-route-id="@ob.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>&nbsp;
                            <a asp-Page="/Categories/Delete"  class="btn btn-danger" asp-route-id="@ob.Id">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>




    </table>
</div>