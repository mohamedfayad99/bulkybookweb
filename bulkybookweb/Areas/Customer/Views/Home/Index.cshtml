@model IEnumerable<Product>
<div class="row ">
    @foreach(var p in Model)
    {
        <div class="col-lg-3 col-sm-6" >
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-5 rounded">
                        <img src="@p.Imageurl" class="card-img-top rounded" width="100%" height="200px;"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h-5 text-dark text-center text-opacity-75 text-uppercase">@p.Title</p>
                                <p class="card-title text-warning text-center">by<b class="m-lg-1">@p.Author</b></p>
                            </div>
                            <div class="pl-1">
                              <p class="text-dark text-center text-opacity-75 mb-0">List Price<span class="text-decoration-line-through m-lg-1">@p.Listprice</span></p>

                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-center text-opacity-75">As low as: <span>@p.List100</span></p>

                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-primary border-0  form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>



    }



</div>